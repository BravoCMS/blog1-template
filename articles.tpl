<{extends 'layout/layout.tpl'}><{block name="template-name"}>    /articles.tpl<{/block}><{block name=title}>    <{$module.name|htmlspecialchars}><{/block}><{block name="module"}>    <{$module.text}>    <div class="article_details_news_bg">        <div class="article_details_news_wp">            <div class="articles_container">                <{foreach $articles as $article}>                    <div class="article_details article_details_news short">                        <{if $article.cover}>                            <a href="<{$article.relative_url}>" title="<{$article.name|escape}>">                                <span class="article_img">                                    <img src="<{$article.cover.photo_file_small}>" style="width: 100%;" />                                </span>                            </a>                        <{/if}>                        <div class="article_info">                            <h3>                                <a href="<{$article.relative_url}>" title="<{$article.name|escape}>">                                    <{$article.short_name|htmlspecialchars}>                                </a>                            </h3>                            <h5 class="date">                               <{$article.publish_date}>                            </h5>                            <p class="desc_short_news">                                <{$article.intro}>                            </p>                            <a class="read_more_news" href="<{$article.relative_url}>">                                <{t "Подробнее"}>                            </a>                        </div>                    </div>                <{/foreach}>            </div>        </div>    </div>    <div class="row">        <{include 'misc/pagination.tpl'}>    </div><{/block}>